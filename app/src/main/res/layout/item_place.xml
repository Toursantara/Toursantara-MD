<!-- res/layout/item_place.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="35dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/place_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintCircleRadius="30dp"
            android:src="@drawable/ic_placeholder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/place_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Place Name"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/place_image"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/place_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rp.50.000 - 120.000"
            app:layout_constraintTop_toBottomOf="@id/place_name"
            app:layout_constraintStart_toEndOf="@id/place_image"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/place_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Location, East Java"
            app:layout_constraintTop_toBottomOf="@id/place_price"
            app:layout_constraintStart_toEndOf="@id/place_image"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/place_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.8"
            app:layout_constraintTop_toBottomOf="@id/place_location"
            app:layout_constraintStart_toEndOf="@id/place_image" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>